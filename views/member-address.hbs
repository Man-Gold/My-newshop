{{!< layout}}


<div class="py-container">
    <div class="yui3-g home">
      {{> member-silder}}
      <!--右侧主内容-->
      <div class="yui3-u-5-6 body">
        <div class="address-detail">
          <div class="addbtn">
            <a class="sui-btn btn-bordered btn-xlarge btn-info" data-toggle="modal" data-target="#add_address" data-keyboard="false">新增收货地址</a>
            <span class="topnum">您已创建4 个收货地址</span>
          </div>
          <div class="addresses">
            <div class="address-item">
              <div class="smt">王小丫<a href="#" class="pull-right delete">删除</a></div>
              <div class="smc">
                <div class="item">
                  <span class="fl label">收货人：</span>
                  <div class="detail">王小丫</div>
                </div>
              </div>
              <div class="smc">
                <div class="item">
                  <span class="fl label">地址：</span>
                  <div class="detail">北京市海淀区东北旺西路8号中关村软件园9号楼国际软件大厦</div>
                </div>
              </div>
              <div class="smc">
                <div class="item">
                  <span class="fl label">手机：</span>
                  <div class="detail">15897895641</div>
                </div>
              </div>
              <div class="smc">
                <div class="item">
                  <span class="fl label">邮编：</span>
                  <div class="detail">15897895641</div>
                </div>
              </div>
            </div>
          </div>

          <!--弹层内容-->
          <div id="add_address" class="sui-modal hide fade">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" data-dismiss="modal" aria-hidden="true" class="sui-close">×</button>
                  <h4 id="myModalLabel" class="modal-title">添加收货地址</h4>
                </div>
                <div class="modal-body">
                  <form action="" class="sui-form form-horizontal">
                    <div class="control-group">
                      <label class="control-label">收货人：</label>
                      <div class="controls">
                        <input type="text" class="input-xfat">
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label">详细地址：</label>
                      <div class="controls">
                        <input type="text" class="input-xfat input-xlarge">
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label">手机：</label>
                      <div class="controls">
                        <input type="text" class="input-xfat">
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label">邮编：</label>
                      <div class="controls">
                        <input type="text" class="input-xfat">
                      </div>
                    </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" data-ok="modal" class="sui-btn btn-primary btn-large">确定</button>
                  <button type="button" data-dismiss="modal" class="sui-btn btn-default btn-large">取消</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  {{#contentFor 'script'}}
  <script src="/assets/js/sui.modal.js"></script>
  <script src="/assets/js/sui.transition.js"></script>
  {{/contentFor}}